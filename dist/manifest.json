{
  "manifest_version": 3,
  "name": "UBC Hide Average",
  "description": "Hide your Workday average.",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.jpg",
    "32": "icons/icon32.jpg",
    "48": "icons/icon48.jpg",
    "128": "icons/icon128.jpg"
  },
  "host_permissions": [
    "https://wd10.myworkday.com/ubc/*"
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-script-loader.content_script.ts.a2a851bd.28c2d83b.js"
      ],
      "matches": [
        "https://wd10.myworkday.com/ubc/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "hide.css"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "https://wd10.myworkday.com/*"
      ],
      "resources": [
        "assets/content_script.ts.a2a851bd.js"
      ],
      "use_dynamic_url": true
    }
  ]
}